#!/bin/bash
# A little script for just finding a worldlist
# Check if the script has been provided with an argument
if [ $# -eq 0 ]; then
    echo "Usage: $0 <search_pattern>"
    exit 1
fi

# Directory to search
search_directory="$HOME/opt/wordlists"

# Perform the find command using the provided argument
search_pattern="$1"
find "$search_directory" -type f -name "*$search_pattern*"
